{
  server: {
    host: '127.0.0.1',
    port: 8002,
    secure: false,
  },
  service: {
    name: 'auth',
    alias: 'api-auth',
    transporter: {
      transport: 5,
      options: {
        urls: ['amqp://localhost:5672'],
        queue: 'service_auth_queue',
        queueOptions: {
          durable: false,
        },
      },
    },
  },
  jwt: {
    ttl: 900,
    alg: 'RS512',
    publicKeyPath: '/config/public-key.pem',
    privateKeyPath: '/config/private-key.pem',
  },
  session: {
    ttl: 1209600,
    bytes: 32,
  },
  microservices: {
    accounts: {
      transport: 5,
      options: {
        urls: ['amqp://localhost:5672'],
        queue: 'service_accounts_queue',
        queueOptions: {
          durable: false,
        },
      },
    },
    sessions: {
      transport: 5,
      options: {
        urls: ['amqp://localhost:5672'],
        queue: 'service_sessions_queue',
        queueOptions: {
          durable: false,
        },
      },
    },
  },
}
